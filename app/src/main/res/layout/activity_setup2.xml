<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:settingitem="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cskaoyan.mobilesafe.activity.Setup2Activity">
    <TextView
        style="@style/TitleStyle"
        android:text="2.手机卡绑定"
        />


    <TextView
        style="@style/ContentStyle"
        android:text="通过绑定SIM卡:"

        />
    <TextView
        style="@style/ContentStyle"
        android:text="下次重启手机如果发现SIM卡变更"

        />
    <TextView
        style="@style/ContentStyle"
        android:text="就会发送报警短信"

        />
    <com.cskaoyan.mobilesafe.activity.SettingItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/siv_sim"
        settingitem:itemtitle="点击绑定SIM卡"
        settingitem:desc_on="SIM卡已经绑定"
        settingitem:desc_off="SIM卡没有绑定"

        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/setup2"
            />
        <Button
            style="@style/NextStyle" />
        <Button
            style="@style/PreviousStyle"
            />

    </RelativeLayout>

</LinearLayout>
